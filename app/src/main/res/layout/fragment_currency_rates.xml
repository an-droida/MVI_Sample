<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bottom_sheet_bg"
    android:orientation="vertical"
    tools:context=".presentation.currency.CurrencyRatesFragment">

    <View
        android:layout_width="50dp"
        android:layout_height="@dimen/margin_divider_4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_divider_12"
        android:background="@drawable/view_bottom_sheet" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="@dimen/margin_divider_20"
        android:layout_marginTop="@dimen/margin_divider_20"
        android:background="@drawable/shape_input_bg"
        android:drawableEnd="@drawable/ic_search"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:includeFontPadding="false"
        android:inputType="text"
        android:lines="1"
        android:padding="@dimen/margin_divider_12"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_size_14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/margin_divider_20"
        android:paddingVertical="@dimen/margin_divider_16"
        tools:listitem="@layout/item_currency" />

</androidx.appcompat.widget.LinearLayoutCompat>
